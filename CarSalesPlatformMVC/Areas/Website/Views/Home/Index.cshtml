<script>
    $(document).ready(function () {
        $('form').on('submit', function (e) {
            e.preventDefault();

            var color = $("select[name='color']").val() || null;
            var brand = $("select[name='brand']").val() || null;
            var category = $("select[name='category']").val() || null;
            var fuelType = $("select[name='fuelType']").val() || null;
            var gearType = $("select[name='gearType']").val() || null;

            var priceRange = $('#price_range').val();
            var minPrice = parseInt(priceRange.split(',')[0]);
            var maxPrice = parseInt(priceRange.split(',')[1]);

            localStorage.setItem('color', color);
            localStorage.setItem('brand', brand);
            localStorage.setItem('category', category);
            localStorage.setItem('fuelType', fuelType);
            localStorage.setItem('gearType', gearType);

            localStorage.setItem('minPrice',minPrice);
            localStorage.setItem('maxPrice',maxPrice);

            // Diğer sayfaya yönlendir
            window.location.href = '/Cars';
        });
    });

</script>