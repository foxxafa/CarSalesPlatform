<!-- Filter-Form -->
<section id="filter_form2">
    <div class="container">
        <div class="main_bg white-text">
            <h3>Find Your Dream Car</h3>
            <form action="#" method="get">
                <div class="row">
                    <div class="form-group col-md-3 col-sm-6">
                        <div class="select">
                            <select class="form-control" name="color">
                                <option value="">Renkler</option>
                                @foreach (var color in ViewBag.Colors as List<Color>)
                                {
                                    <option value="@color.Id">@color.Name</option>
                                }
                            </select>
                        </div>
                    </div>
                    <div class="form-group col-md-3 col-sm-6">
                        <div class="select">
                            <select class="form-control" name="brand">
                                <option value="">Markalar</option>
                                @foreach (var brand in ViewBag.Brands as List<Brand>)
                                {
                                    <option value="@brand.Id">@brand.Name</option>
                                }
                            </select>
                        </div>
                    </div>
                    <div class="form-group col-md-3 col-sm-6">
                        <div class="select">
                            <select class="form-control" name="category">
                                <option value="">Kategoriler</option>
                                @foreach (var category in ViewBag.Categories as List<Category>)
                                {
                                    <option value="@category.Id">@category.Name</option>
                                }
                            </select>
                        </div>
                    </div>
                    <div class="form-group col-md-3 col-sm-6">
                        <div class="select">
                            <select class="form-control" name="fuelType">
                                <option value="">Yakıt Türleri</option>
                                @foreach (var fuelType in ViewBag.FuelTypes as List<FuelType>)
                                {
                                    <option value="@fuelType.Id">@fuelType.Type</option>
                                }
                            </select>
                        </div>
                    </div>
                    <div class="form-group col-md-3 col-sm-6">
                        <div class="select">
                            <select class="form-control" name="gearType">
                                <option value="">Vites Türleri</option>
                                @foreach (var gearType in ViewBag.GearTypes as List<GearType>)
                                {
                                    <option value="@gearType.Id">@gearType.Type</option>
                                }
                            </select>
                        </div>
                    </div>
                    <div class="form-group col-md-6 col-sm-6">
                        <label class="form-label">Price Range ($) </label>
                        <input id="price_range" type="text" class="span2" value="" data-slider-min="50" data-slider-max="6000" data-slider-step="5" data-slider-value="[50,6000]" />
                    </div>
                    <div class="form-group col-md-3 col-sm-6">
                        <button type="submit" class="btn btn-block"><i class="fa fa-search" aria-hidden="true"></i> Search Car </button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</section>
